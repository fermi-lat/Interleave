<source_library title="pseudo_background">   

    <!-- Note that setting frame="zenith" is necessary to avoid occultation
	     the frame does not matter since no particle is generated
     -->
    <source name="sampled_background">
        <spectrum escale="GeV"> 
            <SpectrumClass name="SampledBackground" params="PtMagLat" /> 
            <use_spectrum frame="zenith"/>
        </spectrum>
    </source>

    <source name="sampled_EarthAlbedo">
        <spectrum escale="GeV"> 
            <SpectrumClass name="SampledBackground" params="PtSCzenith"/> 
            <use_spectrum frame="zenith"/>
        </spectrum>
    </source>

 </source_library>


