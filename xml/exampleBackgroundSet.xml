<sourceList xmlns='http://xml.netbeans.org/examples/targetNS'
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xsi:schemaLocation='http://xml.netbeans.org/examples/targetNS file:/./backgroundInterleave.xsd'>

   <source name="earthsLimb" type="PtSCzenith" rangeUnits="degrees" rangeMin="-180" rangeMax="180.0">
      <bin min="-180" max="89." triggerRate="100.0" downlinkRate="0.1">
         <fileList>
            <file filePath="$(ROOTTESTDATAROOT)/data/default/merit.root" treeName="MeritTuple" numEvents="5"/>
         </fileList>
      </bin>
      <bin min="89" max="91" triggerRate="200.0" downlinkRate="0.2">
         <fileList>
            <file filePath="$(ROOTTESTDATAROOT)/data/default/merit.root" treeName="MeritTuple" numEvents="5"/>
         </fileList>
      </bin>
      <bin min="91" max="180." triggerRate="300.0" downlinkRate="0.3">
         <fileList>
            <file filePath="$(ROOTTESTDATAROOT)/data/default/merit.root" treeName="MeritTuple" numEvents="5"/>
         </fileList>
      </bin>
   </source>

   <source name="diffuse" type="PtMagLat" rangeUnits="degrees" rangeMin="-45" rangeMax="45.0">
      <bin min="-45." max="45.0" triggerRate="3000.0" downlinkRate="0.2">
         <fileList>
         <!-- two copies -->
            <file filePath="$(ROOTTESTDATAROOT)/data/default/merit.root" treeName="MeritTuple" numEvents="5"/>
            <file filePath="$(ROOTTESTDATAROOT)/data/default/merit.root" treeName="MeritTuple" numEvents="5"/>
         </fileList>
      </bin>
   </source>      
</sourceList>
